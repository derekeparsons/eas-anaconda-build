export PATH=/usr/local/mcidas/bin:$PATH

mkdir -p $HOME/mcidas/data
MCHOME=/usr/local/mcidas
MCDATA=$HOME/mcidas/data
MCPATH=${MCDATA}:$MCHOME/data:$MCHOME/help
MCGUI=$MCHOME/bin
MCTABLE_READ="$MCDATA/MCTABLE.TXT;$MCHOME/data/ADDESITE.TXT"
MCTABLE_WRITE="$MCDATA/MCTABLE.TXT"
MCCOMPRESS=GZIP
export MCHOME MCCOMPRESS MCDATA MCPATH MCGUI MCTABLE_READ MCTABLE_WRITE
